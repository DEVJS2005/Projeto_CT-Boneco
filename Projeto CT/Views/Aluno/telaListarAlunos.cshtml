
@{
    ViewBag.Title = "Listagem de alunos";
     IOrderedEnumerable<Projeto_CT.Models.aluno> alunos = (IOrderedEnumerable<Projeto_CT.Models.aluno>)ViewBag.alunos;
}
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Data de Nascimento</th>
            <th scope="col">Endereço</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in alunos)
         {
            <tr>
                <th>@item.nome</th>
                <td>@item.data_nascimento</td>
                <td>@item.endereco</td>
                
                <td><a href="/Aluno/ficha?id=@item.idAluno" class="btn btn-info"> Visualizar Ficha </a> </td>
                <td> <a href="/Aluno/telaEditar?id=@item.idAluno" class="btn btn-warning"> Editar Ficha </a> </td>
                <td> <a href="/Aluno/excluir?id=@item.idAluno" class="btn btn-danger"> Excluir Ficha </a>  </td>
            </tr>
         }
    </tbody>
</table>
<br />
<a href="/Home/Index" class="btn btn-secondary">Voltar</a>