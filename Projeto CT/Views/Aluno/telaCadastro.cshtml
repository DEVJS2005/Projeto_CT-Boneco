@Model  Projeto_CT.Models.tipoMatricula
@{
    ViewBag.Title = "Cadastro de alunos";
    List<Projeto_CT.Models.tipoMatricula> tipoMatri = (List<Projeto_CT.Models.tipoMatricula>)ViewBag.tipoMatricula;
}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <form action="/Aluno/cadastro" method="post" enctype="multipart/form-data">
            <label> Nome completo do aluno*: </label><br />
            <input type="text" id="nome" class="fadeIn second" name="nome" placeholder="Nome" required> <br /><br />

            <label> RG (Apenas os números)*: </label> <br />
            <input type="text" id="rg" size="8" maxlength="8" class="fadeIn third" name="rg" placeholder="RG sem a pontuação e o digíto" required> <br /><br />

            <label> CPF (Apenas os números)*: </label> <br />
            <input type="text" id="cpf" size="11" maxlength="11" class="fadeIn third" name="cpf" placeholder="CPF sem a pontuação" required> <br /><br />

            <label> Data de nascimento*: </label> <br />
            <input type="date" id="dataNascimento" class="fadeIn third" name="dataNascimento" placeholder="Data de nascimento" required> <br /><br />

            <label> Endereço*: </label> <br />
            <input type="text" id="endereco" class="fadeIn third" name="endereco" placeholder="Endereço" required> <br /><br />

            <label> Plano de Saúde/ Hospital de Urgência*: </label> <br />
            <input type="text" id="planoSaude" class="fadeIn third" name="planoSaude" placeholder="Plano de saúde" required> <br /><br />

            <label> Número de telefone do Aluno*: </label> <br />
            <input type="text" id="numeroAluno" class="fadeIn third" name="numeroAluno" placeholder="Número do aluno" required> <br /><br />

            <label> Número de telefone de um familiar: </label> <br />
            <input type="text" id="numeroParente" class="fadeIn third" name="numeroParente" placeholder="Número alternativo"> <br /><br />

            <label> Foto 3x4 para ficha: </label> <br />
            <input type="file" id="foto" class="fadeIn third" name="foto" placeholder="Anexo"> <br /><br />

            <label> Selecione um tipo de matrícula*: </label>
            <select name="tipoMatricula" required>
                @foreach (var item in tipoMatri)
                {
                    <option value="@item.idTipoMatricula">@item.nomeTipo</option>

                }
            </select> <br />

            <input type="submit" class="fadeIn fourth" value="Cadastrar">
            <a href="/Home/Index" class="btn btn-secondary">Voltar</a>
            @ViewBag.text
        </form>
    </div>
</div>