@{
    ViewBag.Title = "Login";
}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <form action="/Login/login" method="post">
            <input type="text" id="login" class="fadeIn second" name="usuarioL" placeholder="login">
            <input type="password" id="password" class="fadeIn third" name="senhaL" placeholder="Senha">
            <input type="submit" class="fadeIn fourth" value="Login">
            @ViewBag.text
        </form>
    </div>
</div>